<view class="container">
  <!-- 地图组件 -->
  <map 
    id="myMap"
    class="map"
    latitude='{{latitude}}' 
    longitude='{{longitude}}'
    scale='18'
    show-location
    markers='{{markers}}'
  >
  <cover-view class="top-tips">  <!-- cover-view 会盖住地图 -->
    <cover-image class="top-icon" src="/images/top-tip.png"/>    
    <!-- src中的 / 代表根目录   ./ 代表当前目录   ../ 代表上一级目录 -->
    <cover-view class="top-text">青桔单车</cover-view>
  </cover-view>
  <cover-image 
      bindtap="toReset"
      src="/images/reset.png"
      class="map-icon map-icon_reset">
    </cover-image>
  </map>
</view>